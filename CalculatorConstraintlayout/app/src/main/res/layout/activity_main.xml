<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id = "@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <!-- TextView hiển thị kết quả -->


    <!-- Hàng 1: C, DEL, %, / -->
    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:background="#EEEEEE"
        android:gravity="right|bottom"
        android:padding="66dp"
        android:text="0"
        android:textSize="100sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005" />

    <Button
        android:id="@+id/buttonCE"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="CE"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/textViewResult"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonC"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"/>

    <Button
        android:id="@+id/buttonC"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="C"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/textViewResult"
        app:layout_constraintStart_toEndOf="@id/buttonCE"
        app:layout_constraintEnd_toStartOf="@id/buttonBS"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"/>

    <Button
        android:id="@+id/buttonBS"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="BS"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/textViewResult"
        app:layout_constraintStart_toEndOf="@id/buttonC"
        app:layout_constraintEnd_toStartOf="@id/buttonDivide"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"/>

    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="/"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/textViewResult"
        app:layout_constraintStart_toEndOf="@id/buttonBS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"/>

    <!-- Hàng 2: 7, 8, 9, * -->
    <Button
        android:id="@+id/button7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="7"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/buttonCE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button8"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"/>

    <Button
        android:id="@+id/button8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="8"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/buttonC"
        app:layout_constraintStart_toEndOf="@id/button7"
        app:layout_constraintEnd_toStartOf="@id/button9"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"/>

    <Button
        android:id="@+id/button9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="9"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/buttonBS"
        app:layout_constraintStart_toEndOf="@id/button8"
        app:layout_constraintEnd_toStartOf="@id/buttonMultiply"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"/>

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="*"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/buttonDivide"
        app:layout_constraintStart_toEndOf="@id/button9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"/>

    <!-- Hàng 3: 4, 5, 6, - -->
    <Button
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="4"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/button7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button5"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="5"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/button8"
        app:layout_constraintStart_toEndOf="@id/button4"
        app:layout_constraintEnd_toStartOf="@id/button6"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="6"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/button9"
        app:layout_constraintStart_toEndOf="@id/button5"
        app:layout_constraintEnd_toStartOf="@id/buttonMinus"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"/>

    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="-"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/buttonMultiply"
        app:layout_constraintStart_toEndOf="@id/button6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"/>

    <!-- Hàng 4: 1, 2, 3, + -->
    <Button
        android:id="@+id/button1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="1"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/button4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button2"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="2"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/button5"
        app:layout_constraintStart_toEndOf="@id/button1"
        app:layout_constraintEnd_toStartOf="@id/button3"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="3"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/button6"
        app:layout_constraintStart_toEndOf="@id/button2"
        app:layout_constraintEnd_toStartOf="@id/buttonPlus"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"/>

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="+"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/buttonMinus"
        app:layout_constraintStart_toEndOf="@id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"/>

    <Button
        android:id="@+id/buttonEquals"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="="
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/buttonPlus"
        app:layout_constraintStart_toEndOf="@id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"/>

    <Button
        android:id="@+id/buttonDot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="."
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/button3"
        app:layout_constraintEnd_toStartOf="@id/buttonEquals"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"/>

    <Button
        android:id="@+id/buttonPlusorMinimus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="+/-"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/button1"
        app:layout_constraintEnd_toStartOf="@id/button0"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"/>

    <Button
        android:id="@+id/button0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/button2"
        app:layout_constraintStart_toEndOf="@id/buttonPlusorMinimus"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>